%html{html_attrs('ja')}
  %head
    %title LLnews
    %link(rel='stylesheet' href='bootstrap/css/bootstrap.min.css')
    %link(rel='stylesheet' href='bootstrap/css/bootstrap-responsive.min.css')
    %script{src: 'bootstrap/js/bootstrap.min.js'}
    %script{src: 'http://code.jquery.com/jquery-latest.js'}
    %script{src: 'js/pagify.js'}
    :javascript
      $(document).ready(function() {
        $('#hoge').pagify({
          pages: ['ruby', 'perl', 'python', 'php'],
          animation: 'fadeIn',
          'default': 'about',
          cache: true
        });
      });


  %body
    %div.hero-unit
      %h1 #{@title}

    %div#page_holder
      <!-- Basic tabs(bootstrap) -->
      %ul{class: 'nav nav-pills'}
        %li.active
          %a{href: "#ruby"} Ruby
        %li
          %a{href: "#perl"} Perl
        %li
          %a{href: "#python"} Python 
        %li
          %a{href: "#php"} PHP
  
      %div.content
        %table{class: "table table-striped table-bordered table-condensed"}
          - @rubys.each do |bookmark|
            %tr
              %td.title= bookmark.title
              %td.url= bookmark.url
              %td.count= bookmark.bookmark_count
  
